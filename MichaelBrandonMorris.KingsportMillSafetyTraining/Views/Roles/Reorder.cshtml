@model IList<MichaelBrandonMorris.KingsportMillSafetyTraining.Models.Data.Role>

@{
    ViewBag.Title = "Reorder";
    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}

<h2>Reorder</h2>
<h4>Roles</h4>
<hr/>
<p class="bg-info">
    On the role selection page, roles will be selected in the order below, with the last role being the default.
</p>

@using (Html.BeginForm())
{
    <table class="table table-condensed table-hover table-striped"
           id="sort">
        <thead>
        <tr>
            <th>
                Drag to Reorder
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Single().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Single().Description)
            </th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                @* ReSharper disable once UnknownCssClass
                        The index class is used by the sorting function. *@
                <td class="index">
                    &#8597;
                    @Html.HiddenFor(model => Model[i].Id)
                    @Html.HiddenFor(model => Model[i].Index, new
                    {
                        htmlAttributes = new
                        {
                            name = $"slides[{i}].Index",
                            @readonly = true
                        }
                    })
                </td>
                <td>
                    @Html.DisplayFor(m => Model[i].Title)
                </td>
                <td>
                    @Html.DisplayFor(model => Model[i].Description)
                </td>
            </tr>
        }
        </tbody>
    </table>

    <input class="btn btn-default"
           type="submit"
           value="Save Order"/>
    <button class="btn btn-default"
            onclick="location.href = '@Url.Action("Index")';return false;">
        Cancel
    </button>
}

@section Scripts
{
    <script>
        $(function() {
            $('#sort tbody').sortable({
                stop: function() {
                    $("#sort tbody tr").each(function(index, element) {
                        var hiddenInput = $(element).children(".index").children().last();
                        hiddenInput.val(index);
                    });
                }
            });
        });

        $('td, th', '#sort').each(function() {
            var cell = $(this);
            cell.width(cell.width());
        });
    </script>
}