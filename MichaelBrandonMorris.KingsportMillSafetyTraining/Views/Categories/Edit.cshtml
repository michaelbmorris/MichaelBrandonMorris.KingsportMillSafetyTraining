@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap
@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap.Display
@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap.Form
@model MichaelBrandonMorris.KingsportMillSafetyTraining.Db.Models.Category

@{
    ViewBag.Title = "Edit";
    ViewBag.Subtitle = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<h4>Category</h4>
<hr/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.Id)
        @Html.EditorForModel(Model)

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                @Html.BootstrapSubmit("Save", ContextualColor.Primary)
                @Html.BootstrapActionLinkButton("Cancel", "Index", ContextualColor.Danger)
            </div>
        </div>
    </div>
}
