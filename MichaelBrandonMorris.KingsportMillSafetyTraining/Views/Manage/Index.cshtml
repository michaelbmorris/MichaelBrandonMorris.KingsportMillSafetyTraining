@using Microsoft.AspNet.Identity
@model MichaelBrandonMorris.KingsportMillSafetyTraining.Models.Identity.ViewModels.Manage.IndexViewModel
@{
    ViewBag.Title = "Manage";
    ViewBag.Subtitle = "Change your account settings";
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <ul>
        <li>
            @(Model.HasPassword ? Html.ActionLink("Change Password", "ChangePassword", null, new
              {
                  @class = "btn btn-primary"
              }) : Html.ActionLink("Set Password", "SetPassword", null, new
              {
                  @class = "btn btn-primary"
              }))
        </li>
        <li>
            @Html.ActionLink("View Training Results", "UserResults", "Results", new
            {
                id = User.Identity.GetUserId()
            }, new
            {
                @class = "btn btn-primary"
            })
        </li>
    </ul>
</div>