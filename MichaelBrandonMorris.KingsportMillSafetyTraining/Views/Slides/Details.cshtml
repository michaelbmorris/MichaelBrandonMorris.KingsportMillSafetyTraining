@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap
@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap.Display
@model MichaelBrandonMorris.KingsportMillSafetyTraining.Models.SlideViewModel

@{
    ViewBag.Title = "Details";
    ViewBag.Subtitle = "Slide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.DisplayForModel(Model)
</div>

<div class="row">
    <div class="col-md-6">
        @Html.BootstrapActionLinkButton("Edit", Model.Id, ContextualColor.Primary)
        @Html.BootstrapActionLinkButton("View", Model.Id, ContextualColor.Primary, TargetAttribute.Blank)
        @Html.BootstrapActionLinkButton("Delete", Model.Id, ContextualColor.Danger)
    </div>
    <div class="col-md-6" style="text-align: right;">
        @Html.BootstrapActionLinkButton("Index", ContextualColor.Primary)
    </div>
</div>
