@{
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport">
    <meta content="IE=11"
          http-equiv="x-ua-compatible">
    <title>
        @controllerName
        @(ViewBag.Title == null || actionName.Equals("Index") ? string.Empty : " - " + ViewBag.Title)
        | Kingsport Mill Safety Training
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @if (User.Identity.IsAuthenticated
         && User.IsInRole("Administrator"))
    {
        <style>
            body {
                padding-top: 101px;
            }
        </style>
    }

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle"
                        data-target=".navbar-collapse"
                        data-toggle="collapse"
                        type="button">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kingsport Mill Safety Training", "Index", "Home", new
                {
                    area = ""
                }, new
                {
                    @class = "navbar-brand"
                })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Training", "Index", "Training")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            @if (User.Identity.IsAuthenticated
                 && User.IsInRole("Administrator"))
            {
                <div class="collapse navbar-collapse"
                     id="navbar">
                    <ul class="nav navbar-nav">
                        <li>
                            <a aria-expanded="false"
                               aria-haspopup="true"
                               class="dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               role="button">
                                Categories <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View All", "Index", "Categories")
                                </li>
                                <li class="divider"
                                    role="separator">
                                </li>
                                <li class="dropdown-header">Actions</li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Categories")
                                </li>
                                <li>
                                    @Html.ActionLink("Reorder", "Reorder", "Categories")
                                </li>
                                <li>
                                    @Html.ActionLink("Assign Roles", "AssignRoles", "Categories")
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a aria-expanded="false"
                               aria-haspopup="true"
                               class="dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               role="button">
                                Roles <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View All", "Index", "Roles")
                                </li>
                                <li class="divider"
                                    role="separator">
                                </li>
                                <li class="dropdown-header">Actions</li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Roles")
                                </li>
                                <li>
                                    @Html.ActionLink("Reorder", "Reorder", "Roles")
                                </li>
                                <li>
                                    @Html.ActionLink("Assign Categories", "AssignCategories", "Roles")
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a aria-expanded="false"
                               aria-haspopup="true"
                               class="dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               role="button">
                                Slides <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View All", "Index", "Slides")
                                </li>
                                <li class="divider"
                                    role="separator">
                                </li>
                                <li class="dropdown-header">Actions</li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Slides")
                                </li>
                                <li>
                                    @Html.ActionLink("Reorder", "Reorder", "Slides")
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a aria-expanded="false"
                               aria-haspopup="true"
                               class="dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               role="button">
                                Users <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("View All", "Index", "Users")
                                </li>
                                <li class="divider"
                                    role="separator">
                                </li>
                                <li class="dropdown-header">Actions</li>
                                <li>
                                    @Html.ActionLink("Create", "Create", "Users")
                                </li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("Results", "Index", "Results")
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="body-content container">
        <h2>@ViewBag.Title</h2>

        @if (ViewBag.Subtitle != null)
        {
            <h4>@ViewBag.Subtitle</h4>
        }

        @if (ViewBag.Title != null)
        {
            <hr/>
        }

        @RenderBody()
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Kingsport Mill Safety Training</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/MVCGridHandler.axd/script.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>