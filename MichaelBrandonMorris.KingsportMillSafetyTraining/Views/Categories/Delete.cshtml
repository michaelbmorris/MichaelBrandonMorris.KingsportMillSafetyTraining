@model MichaelBrandonMorris.KingsportMillSafetyTraining.Db.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}

<h2>Delete</h2>
<h4>Category</h4>
<p class="bg-danger">Are you sure you want to delete this?</p>
