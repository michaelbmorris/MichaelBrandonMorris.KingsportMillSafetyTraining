@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap
@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap.Display
@using MichaelBrandonMorris.Extensions.Web.HtmlHelper.Bootstrap.Display.Horizontal

@model MichaelBrandonMorris.KingsportMillSafetyTraining.Models.UserViewModel

@{
    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<h4>User</h4>
<hr/>

<div>
    @Html.BootstrapHorizontalDefinitionListFor(model => model.FirstName, model => model.MiddleName, model => model.LastName, model => model.CompanyName, model => model.OtherCompanyName, model => model.Email, model => model.PhoneNumber, model => model.LastLogonDateTimeString, model => model.LastTrainingStartDateTimeString)
</div>
<div class="pull-left">
    @Html.BootstrapActionLinkButton("Edit", Model.Id, ContextualColor.Primary)
</div>
<div class="pull-right">
    @Html.BootstrapActionLinkButton("View All Users", "Index", ContextualColor.Primary)
</div>
<div class="clearfix"></div>