@model MichaelBrandonMorris.KingsportMillSafetyTraining.Models.CategoryViewModel

@{
    ViewBag.Title = "Delete";
    ViewBag.Subtitle = "Are you sure you want to delete this?";
    Layout = Url.Content("~/Views/Shared/_Layout.cshtml");
}

@Html.DisplayForModel(Model)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <input class="btn btn-danger"
               type="submit"
               value="Delete"/>
        @Html.ActionLink("Cancel", "Index", null, new
        {
            @class = "btn btn-primary"
        })
    </div>
}