<div class="form-group">
    @Html.LabelFor(x => x.Answers, new
    {
        @class = "control-label col-md-2"
    })
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-10"
                 id="answers-list">
                @Html.EditorForMany(x => x.Answers)
            </div>
            <div class="col-md-2 text-right">
                <button class="btn btn-primary"
                        id="add-answer"
                        type="button">
                    Add New Answer
